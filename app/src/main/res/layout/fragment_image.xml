<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="me.pullar.tigur.ui.fragment.ImageFragment"
    android:background="#99000000" android:clickable="true"
    android:id="@+id/image_fragment">

    <RelativeLayout android:id="@+id/fragment_image_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:id="@+id/fragment_image_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>
