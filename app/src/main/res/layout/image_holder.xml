<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_content"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="@color/cardview_dark_background">
    <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout android:id="@+id/image_info_overlay"
            android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:id="@+id/image_info_title"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:textColor="@android:color/tertiary_text_dark" />
            <TextView android:id="@+id/image_info_views"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_below="@id/image_info_title" android:layout_alignParentLeft="true"
                android:textColor="@android:color/tertiary_text_dark" />
        </RelativeLayout>
        <ImageView android:id="@+id/image"
        android:layout_width="match_parent" android:layout_height="400dp" />
    </FrameLayout>
</android.support.v7.widget.CardView>
