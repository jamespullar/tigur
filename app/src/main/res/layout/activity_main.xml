<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary" tools:context=".MainActivity">

    <RelativeLayout android:id="@+id/splash"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/splash_text"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:text="@string/splash_text" android:gravity="center"
            android:textSize="@dimen/abc_text_size_display_4_material"
            android:textColor="@color/colorAccent" android:textStyle="bold"/>
    </RelativeLayout>


    <FrameLayout android:id="@+id/image_content"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView android:id="@+id/image"
            android:layout_width="match_parent" android:layout_height="match_parent" />
        <RelativeLayout android:id="@+id/image_info_overlay"
            android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:id="@+id/image_info_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@android:color/tertiary_text_dark" />
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
